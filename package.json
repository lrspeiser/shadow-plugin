{
  "name": "shadow-watch",
  "displayName": "Shadow Watch - Architecture Monitor",
  "description": "Continuous code architecture analysis with LLM-ready insights for Cursor, ChatGPT, and other AI assistants",
  "version": "1.0.0",
  "publisher": "shadow-watch",
  "repository": {
    "type": "git",
    "url": "https://github.com/lrspeiser/shadow-plugin"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Linters",
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "architecture",
    "code quality",
    "refactoring",
    "llm",
    "cursor",
    "ai",
    "analysis"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "shadowWatch.runStreamlinedAnalysis",
        "title": "Shadow Watch: Run Analysis",
        "icon": "$(zap)"
      },
      {
        "command": "shadowWatch.runStreamlinedAnalysisWithTests",
        "title": "Shadow Watch: Run Analysis + Tests",
        "icon": "$(beaker)"
      },
      {
        "command": "shadowWatch.openSettings",
        "title": "Shadow Watch: Settings",
        "icon": "$(settings-gear)"
      },
      {
        "command": "shadowWatch.clearAllData",
        "title": "Shadow Watch: Clear All Data",
        "icon": "$(trash)"
      },
      {
        "command": "shadowWatch.refreshInsights",
        "title": "Shadow Watch: Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "shadowWatch.openReport",
        "title": "Open Report"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "shadow-watch",
          "title": "Shadow Watch",
          "icon": "$(eye)"
        }
      ]
    },
    "views": {
      "shadow-watch": [
        {
          "id": "shadowWatch.insights",
          "name": "Menu"
        },
        {
          "id": "shadowWatch.reportsViewer",
          "name": "Reports"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "shadowWatch.refreshInsights",
          "when": "view == shadowWatch.insights",
          "group": "navigation"
        },
        {
          "command": "shadowWatch.copyInsights",
          "when": "view == shadowWatch.insights",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "shadowWatch.copyInsight",
          "when": "view == shadowWatch.insights && viewItem == insight",
          "group": "inline"
        }
      ],
      "editor/context": [
        {
          "command": "shadowWatch.analyzeFile",
          "group": "shadowWatch",
          "when": "editorTextFocus"
        },
        {
          "command": "shadowWatch.copyFileInsights",
          "group": "shadowWatch",
          "when": "editorTextFocus"
        }
      ]
    },
    "configuration": {
      "title": "Shadow Watch",
      "properties": {
        "shadowWatch.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Shadow Watch architecture monitoring"
        },
        "shadowWatch.analyzeOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically analyze code on file save"
        },
        "shadowWatch.analyzeInterval": {
          "type": "number",
          "default": 30000,
          "description": "Minimum time (ms) between automatic analyses"
        },
        "shadowWatch.minFilesForAnalysis": {
          "type": "number",
          "default": 3,
          "description": "Minimum number of files required for architecture analysis"
        },
        "shadowWatch.maxFileSizeKB": {
          "type": "number",
          "default": 500,
          "description": "Maximum file size (KB) to analyze"
        },
        "shadowWatch.excludePatterns": {
          "type": "array",
          "default": [
            "**/node_modules/**",
            "**/.git/**",
            "**/dist/**",
            "**/build/**",
            "**/__pycache__/**",
            "**/venv/**",
            "**/.venv/**"
          ],
          "description": "Glob patterns for files to exclude from analysis"
        },
        "shadowWatch.llmFormat": {
          "type": "string",
          "enum": [
            "cursor",
            "chatgpt",
            "generic",
            "compact"
          ],
          "default": "cursor",
          "description": "Format for LLM prompts"
        },
        "shadowWatch.severityThreshold": {
          "type": "string",
          "enum": [
            "error",
            "warning",
            "info"
          ],
          "default": "warning",
          "description": "Minimum severity to show in problems panel"
        },
        "shadowWatch.showInlineHints": {
          "type": "boolean",
          "default": true,
          "description": "Show inline code hints for issues"
        },
        "shadowWatch.llmProvider": {
          "type": "string",
          "enum": [
            "openai",
            "claude"
          ],
          "default": "openai",
          "description": "LLM provider to use for AI-powered analysis. Claude uses structured outputs for more reliable parsing."
        },
        "shadowWatch.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API key for AI-powered analysis, product documentation, and architecture insights",
          "markdownDescription": "OpenAI API key for AI-powered analysis, product documentation, and architecture insights. You can also set this via the command palette: `Shadow Watch: Set OpenAI API Key`",
          "scope": "application"
        },
        "shadowWatch.claudeApiKey": {
          "type": "string",
          "default": "",
          "description": "Claude API key for AI-powered analysis. Claude uses structured outputs for guaranteed valid JSON responses.",
          "markdownDescription": "Claude API key for AI-powered analysis. Claude uses structured outputs for guaranteed valid JSON responses. You can also set this via the command palette: `Shadow Watch: Set Claude API Key`",
          "scope": "application"
        },
        "shadowWatch.clearAllData": {
          "type": "boolean",
          "default": false,
          "description": "Clear all Shadow Watch data",
          "markdownDescription": "Clear all Shadow Watch data including analysis cache, saved documentation, insights, and analysis results. This cannot be undone.\n\n**⚠️ Warning:** Checking this box will immediately clear ALL Shadow Watch data. This action cannot be undone.\n\n**Alternative:** You can also run the command `Shadow Watch: Clear All Data` from the Command Palette (Cmd+Shift+P / Ctrl+Shift+P)."
        }
      }
    }
  },
  "scripts": {
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:vscode": "node ./out/test/runTest.js",
    "vscode:prepublish": "npm run package"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.25",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vscode/test-electron": "^2.3.4",
    "axios": "^1.13.2",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "gpt-3-encoder": "^1.1.4",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.5",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.69.0",
    "ignore": "^5.2.4",
    "openai": "^4.20.0"
  }
}
